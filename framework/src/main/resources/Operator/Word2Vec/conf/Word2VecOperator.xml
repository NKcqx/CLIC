<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Operator ID="Word2VecOperator" name="Word2VecOperator" kind="consumer">

    <platforms>
        <platform ID="pytorch">
            <path>Operator/Word2Vec/conf/PytorchWord2VecOperator.xml</path>
        </platform>
    </platforms>

    <parameters>
        <parameter kind="input" name="min_count" data_type="string" default="5"> </parameter>
        <parameter kind="input" name="max_window_size" data_type="string" default="5"> </parameter>
        <parameter kind="input" name="batch_size" data_type="string" default="512"> </parameter>
        <parameter kind="input" name="num_workers" data_type="string" default="0"> </parameter>
        <parameter kind="input" name="loss" data_type="string" default="SigmoidBinaryCrossEntropyLoss"> </parameter>
        <parameter kind="input" name="embed_size" data_type="string" default="8"> </parameter>
        <parameter kind="input" name="lr" data_type="string" default="0.025"> </parameter>
        <parameter kind="input" name="num_epochs" data_type="string" default="10"> </parameter>
        <parameter kind="input" name="device" data_type="string" default="cpu"> </parameter>
        <parameter kind="input" name="optimizer" data_type="string" default="Adam"> </parameter>
    </parameters>
    <inputs>  <!-- 输入数据 -->
        <input name="data" data_type="string" required="true"> </input>
    </inputs>
    <outputs> <!-- 计算结果 -->
        <output name="result" data_type="string"> </output>
    </outputs>

</Operator>