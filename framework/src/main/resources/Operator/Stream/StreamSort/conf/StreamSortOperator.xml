<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Operator ID="StreamSortOperator" name="StreamSortOperator" kind="consumer">

    <platforms>
        <platform ID="spark">
            <path>Operator/Stream/StreamSort/conf/SparkStreamSortOperator.xml</path>
        </platform>
    </platforms>

    <parameters> <!-- 计算参数 -->
        <parameter name="separator" data_type="string" default=","> </parameter> <!--参数默认值怎么做?-->
        <parameter name="topNum" data_type="string" default="-1"> </parameter>
        <parameter name="outputPath" data_type="string"> </parameter>
    </parameters>
    <inputs>    <!-- 输入数据 -->
        <input name="data" data_type="string" required="true"> </input>
    </inputs>
    <outputs> </outputs>

</Operator>